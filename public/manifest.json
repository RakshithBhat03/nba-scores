{
  "manifest_version": 3,
  "name": "NBA Scores",
  "version": "1.0.0",
  "description": "Get live NBA scores, standings, and detailed box scores with dark theme support",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://site.api.espn.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "NBA Scores",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}